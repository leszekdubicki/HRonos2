<%= form_for(@employee) do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_area :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_area :last_name %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.date_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :salary %><br>
    <%= f.text_field :salary %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%#= f.text_field :user_id #replaced with list of all users%>
    <% if @users %>
        <%= f.collection_select :user_id, @users, :id, :full_name, include_blank: true %>
    <%else%>
        <p> No users in the System </p>
    <%end%>
  </div>
  <div class="field">
    <%= f.label :manager_id %><br>
    <%#<%= f.text_field :manager_id %>
    <%#replaced by collection_select - list of all managers in the system#%>
    <% if @managers %>
        <%= f.collection_select :manager_id, @managers, :id, :full_name, include_blank: true %>
    <%else%>
        <p> No managers in the System </p>
    <%end%>
  </div>
  <div class="field">
    <%= f.label :level %><br>
    <%#<%= f.text_field :manager_id %>
    <%#replaced by collection_select - list of all managers in the system#%>
        <%= f.select :level, [["Standard Employee", 0], ["Manager", 1]] %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
