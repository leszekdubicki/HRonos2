<!DOCTYPE html>
<html>
<head>
  <title>HR2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= yield %>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<% if user_signed_in? %>
 <div>Signed in as... <%= current_user.email %> (<%= link_to 'Sign out', destroy_user_session_path, :method => :delete
%>)</div>
<% else %>
 <%= link_to 'Sign in', new_user_session_path %>
<% end %>
<% if admin_signed_in? %>
 <div>Signed in as Admin as... <%= current_admin.email %> (<%= link_to 'Sign out', destroy_admin_session_path, :method => :delete
%>)</div>
<% else %>
 or <%= link_to 'Sign in as Admin', new_admin_session_path %>
<% end %>
<p> <%= link_to "Main Page", "/" %></p>
</body>
</html>
